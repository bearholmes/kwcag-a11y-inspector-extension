{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "0.13.0",
  "default_locale": "en",
  "icons": {
    "16": "assets/icons/16.png",
    "22": "assets/icons/22.png",
    "24": "assets/icons/24.png",
    "32": "assets/icons/32.png",
    "48": "assets/icons/48.png",
    "128": "assets/icons/128-crap.png"
  },
  "action": {
    "default_icon": "assets/icons/16.png",
    "default_title": "kwcag a11y inspector"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options/settings.html",
    "browser_style": true
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": ["https://*/*", "http://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["content/*.js", "chunks/*.js", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
